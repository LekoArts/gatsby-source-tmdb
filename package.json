{
  "private": true,
  "name": "root",
  "description": "Package & Example for gatsby-source-tmdb",
  "author": "LekoArts <hello@lekoarts.de>",
  "workspaces": [
    "example",
    "package"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "develop": "yarn workspace example develop",
    "tsc": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "format": "prettier \"**/*.{md,mdx,json,yaml}\" --write",
    "watch": "yarn workspace gatsby-source-tmdb watch",
    "prepare": "yarn workspace gatsby-source-tmdb prepare",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
